{
    "compilerOptions": {
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "rootDir": "./source",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["source/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}